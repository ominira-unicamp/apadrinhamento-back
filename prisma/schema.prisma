generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  email     String  @unique
  name      String?
  password  String
  status    Boolean @default(false)
  picture   String?
  telephone String?

  passwordResetTokens PasswordResetToken[]
  
  whiteboard String?

  course      Course?
  yearOfEntry Int?
  pronouns    String[]
  ethnicity   String[]
  city        String?
  lgbt        String[]
  parties     Int?
  hobby       String?
  music       String?
  games       String?
  sports      String?

  selectedGodparents User[] @relation("selectedGodparents")
  selectedBy         User[] @relation("selectedGodparents")

  approvalStatus ApprovalStatus @default(PENDING)

  godparentRelation GodparentRelation[] @relation("godparent")
  godchildRelation  GodparentRelation[] @relation("godchild")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role Role?

  @@map("users")
}

enum Course {
  EC
  CC
}

enum Role {
  bixe
  veterane
  ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model GodparentRelation {
  godparentId String @db.Uuid
  godchildId  String @db.Uuid

  godparent User @relation("godparent", fields: [godparentId], references: [id])
  godchild  User @relation("godchild", fields: [godchildId], references: [id])

  @@id([godparentId, godchildId]) // Composite Primary Key
  @@map("godparent_relations") // Naming the join table explicitly
}

model PasswordResetToken {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("password_reset_tokens")
}
